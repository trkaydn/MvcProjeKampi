@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AdminID)
    <br />
    @Html.Label("ADmin Kullanıcı Adı:")
    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre:")
    @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
    <br />
    @Html.Label("Rolü Seçiniz: ")
    @Html.DropDownListFor(x=>x.AdminRole, new List<SelectListItem>
{
   new SelectListItem{ Text="A", Value = "A" },
   new SelectListItem{ Text="B", Value = "B" },
   new SelectListItem{ Text="C", Value = "C" },
  
})
    <br />
    <button class="btn btn-success">Güncelle</button>

</div>
}

