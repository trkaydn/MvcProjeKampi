@using EntityLayer.Concrete
@model Talent
@{
    ViewBag.Title = "AddTalent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yetenek Ekle</h2>

@using (Html.BeginForm("AddTalent", "TalentCard", FormMethod.Post))
{
    @Html.Label("Yetenek Adı")
    @Html.TextBoxFor(x => x.TalentName, "", new { @class = "form-control" })
    <br />
    @Html.Label("Yetenek Yüzdesi")
    @Html.TextBoxFor(x => x.TalentValue, "", new { @class = "form-control", type = "number" })
    <br />
    <input type="submit" class="btn btn-success">

}
