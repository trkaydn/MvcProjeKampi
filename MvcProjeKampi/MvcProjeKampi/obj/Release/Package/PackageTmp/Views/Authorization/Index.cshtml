@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        @if (User.IsInRole("B"))
        {
            <th>Sil</th>
            <th>Yetkisini Değiştir</th>
        }
    </tr>
    @foreach (var admin in Model)
    {
        <tr>
            <th>@admin.AdminID</th>
            <td>@admin.AdminUserName</td>
            <td>@admin.AdminRole</td>
            <td>Aktif</td>
            @if (User.IsInRole("B"))
            {
                <td><a href="/Authorization/DeleteAdmin/@admin.AdminID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Authorization/EditAdmin/@admin.AdminID" class="btn btn-warning">Yetkisini Değiştir</a></td>
            }
            <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
        </tr>
    }
</table>
<a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Tanımla</a>
